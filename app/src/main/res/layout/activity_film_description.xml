<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FilmDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/imgDesc"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

        <TextView
            android:id="@+id/txtFilmNameDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textAlignment="center"
            tools:text="Frozen II"
            android:layout_margin="8dp"/>

        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bbb"
            android:layout_marginHorizontal="16dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TableRow>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Director"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_weight="0"/>
                <TextView
                    android:text=":"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_weight="0"
                    />
                <TextView
                    android:id="@+id/txtDirector"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="Joe Russo"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_weight="0"/>
                <TextView
                    android:text=":"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_weight="0"
                    />
                <TextView
                    android:id="@+id/txtRating"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    tools:text="8.0"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_weight="0"/>
                <TextView
                    android:text=":"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_weight="0"
                    />
                <TextView
                    android:id="@+id/txtGenre"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    tools:text="Action Scifi"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Runtime"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_weight="0"/>
                <TextView
                    android:text=":"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_weight="0"
                    />
                <TextView
                    android:id="@+id/txtRuntime"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    tools:text="120 Min"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Release"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_weight="0"/>
                <TextView
                    android:text=":"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_weight="0"
                    />
                <TextView
                    android:id="@+id/txtRelease"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="20-20-2019"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
            </TableRow>
        </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#bbb"
        android:layout_marginHorizontal="16dp"/>

    <TextView
        android:id="@+id/txtFilmDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_margin="16dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>